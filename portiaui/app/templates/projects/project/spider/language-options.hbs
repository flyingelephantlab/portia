{{#tool-group id="language-options-group" collapsible=false onClose=(action 'closeOptions') as |group|}}
    {{#if (eq group.section "tabs")}}
        {{#group.tab toolId="language-options"}}
            Language Options
        {{/group.tab}}
    {{else if (eq group.section "panels")}}
        {{#group.panel class="extracted-items container-fluid" toolId="language-options" as |active|}}
            {{language-options spider=model}}
        {{/group.panel}}
    {{/if}}
{{/tool-group}}
