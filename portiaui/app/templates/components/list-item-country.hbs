{{#list-item-selectable value=(mut countryCode) valueAttribute='label' onChange=(action 'saveSpider') menuContainer="body" menuAlign="left" as |select|}}
    {{#select.header}}
        Select Country
    {{/select.header}}
    {{#each countryCodeOptions as |option|}}
        {{#select.item value=option action=(action select.setValueAndClose option)}}
            {{option.label}}
        {{/select.item}}
    {{/each}}
{{/list-item-selectable}}
